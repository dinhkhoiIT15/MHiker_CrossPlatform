<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MHiker_CrossPlatform.ViewModels"
             x:DataType="viewmodel:AddHikeViewModel"
             x:Class="MHiker_CrossPlatform.Views.AddHikePage"
             Title="{Binding Name, StringFormat='Hike: {0}', TargetNullValue='New Hike'}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Border StrokeThickness="1" Padding="10,0" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10">
                    <Image Source="ic_hike_name.png" 
                           WidthRequest="20" HeightRequest="20" 
                           VerticalOptions="Center" />
                    <Entry Text="{Binding Name}" 
                           Placeholder="Name (Required)" 
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="10,0" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10">
                    <Image Source="ic_location.png" 
                           WidthRequest="20" HeightRequest="20" 
                           VerticalOptions="Center" />
                    <Entry Text="{Binding Location}" 
                           Placeholder="Location (Required)" 
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="10,0" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10">
                    <Image Source="ic_date.png" 
                           WidthRequest="20" HeightRequest="20" 
                           VerticalOptions="Center" />
                    <Label Text="Date:" VerticalOptions="Center" TextColor="Gray"/>
                    <DatePicker Date="{Binding DateOfHike}" 
                                Format="d" 
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="10,5" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10">
                    <Image Source="ic_parking.png" 
                           WidthRequest="20" HeightRequest="20" 
                           VerticalOptions="Center" />
                    <Label Text="Parking Available" 
                           VerticalOptions="Center" 
                           HorizontalOptions="FillAndExpand" />
                    <Switch IsToggled="{Binding ParkingAvailable}" />
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="10,0" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10">
                    <Image Source="ic_length.png" 
                           WidthRequest="20" HeightRequest="20" 
                           VerticalOptions="Center" />
                    <Entry Text="{Binding LengthOfHike}" 
                           Placeholder="Length (km) (Required)" 
                           Keyboard="Numeric"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="10,0" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10">
                    <Image Source="ic_difficulty.png" 
                           WidthRequest="20" HeightRequest="20" 
                           VerticalOptions="Center" />
                    <Picker SelectedItem="{Binding DifficultyLevel}" 
                            Title="Select Difficulty"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Easy</x:String>
                                <x:String>Medium</x:String>
                                <x:String>Hard</x:String>
                                <x:String>Very Hard</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="10,0" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10">
                    <Image Source="ic_hiker_count.png" 
                           WidthRequest="20" HeightRequest="20" 
                           VerticalOptions="Center" />
                    <Entry Text="{Binding HikerCount}" 
                           Placeholder="Hiker Count" 
                           Keyboard="Numeric"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="10,0" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <HorizontalStackLayout Spacing="10">
                    <Image Source="ic_equipment.png" 
                           WidthRequest="20" HeightRequest="20" 
                           VerticalOptions="Center" />
                    <Entry Text="{Binding Equipment}" 
                           Placeholder="Equipment (Optional)" 
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <Border StrokeThickness="1" Padding="10" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <Editor Text="{Binding Description}" 
                        Placeholder="Description (Optional)" 
                        AutoSize="TextChanges" 
                        HeightRequest="100"/>
            </Border>

            <Button Text="Save" 
                    Command="{Binding SaveHikeCommand}" 
                    Margin="0,10,0,0" 
                    CornerRadius="8"/>

            <Button Text="Delete Hike" 
                    Command="{Binding DeleteHikeCommand}"
                    IsVisible="{Binding IsEditMode}"
                    BackgroundColor="#D32F2F"
                    TextColor="White"
                    CornerRadius="8"
                    Margin="0,0,0,20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>